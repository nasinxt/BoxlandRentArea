<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityClass.ListRentArea.ListRentArea">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgroundcolor">

        <LinearLayout
            android:id="@+id/areaResultLinear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ค้นหาพื้นที่จำหน่ายสินค้า"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:textColor="@color/white"
                />



            <Spinner
                android:id="@+id/typeSinnerListTenant"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="20dp"
                />

            <EditText
                android:id="@+id/searchListTenant"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:hint="ค้นหาพื้นที่"
                android:textColor="@color/white"

                />

            <Button
                android:id="@+id/searchBtnListTenant"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="ค้นหา"
                android:textColor="@color/white"
                android:background="@drawable/buttonstyle"
                android:layout_margin="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="ผลการค้นหา"
                android:textSize="20dp"
                android:layout_margin="10dp"
                android:textColor="@color/white"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TableLayout
                    android:id="@+id/SearchResult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp">


                </TableLayout>


            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>