<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityClass.ViewTenantDetail.ViewTenantDetail">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.sonicodetsu.usersystemtest.account">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <!-- TODO: Update blank fragment layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="240dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:background="@drawable/gradientbackgroud"
                        android:orientation="vertical">

                        <Button
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/editTenantBtn"
                            android:layout_gravity="right"
                            android:layout_margin="5dp"
                            android:background="@drawable/edit"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="ข้อมูลส่วนตัว"
                                android:textColor="#fff"
                                android:textSize="25sp"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                />

                            <ImageView
                                android:layout_width="150dp"
                                android:layout_height="85dp"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/ic_team" />

                        </LinearLayout>




                    </LinearLayout>

                    <android.support.v7.widget.CardView
                        android:layout_width="300dp"
                        android:layout_height="60dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="160dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_gravity="center"
                                    >

                                    <TextView
                                        android:id="@+id/accountNameTenant"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=" "
                                        android:textSize="18sp"
                                        android:textStyle="bold" />

                                </LinearLayout>




                            </LinearLayout>



                        </LinearLayout>




                    </android.support.v7.widget.CardView>



                </RelativeLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    >

                    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:stretchColumns="1"
                        android:gravity="center">

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_margin="1dp"
                            android:layout_weight="1"

                            >

                            <ImageView
                                android:src="@drawable/ic_id_card"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text=""
                                android:layout_margin="1dp"
                                android:id="@+id/idcardTenant"
                                android:layout_column="1"
                                android:gravity="center"
                                android:textStyle="bold"
                                />


                            />
                        </TableRow>

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_margin="1dp"
                            android:layout_weight="1"
                            >

                            <ImageView
                                android:src="@drawable/ic_phone_number"
                                android:layout_width="50dp"
                                android:layout_margin="5dp"
                                android:layout_height="50dp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text=" "
                                android:layout_margin="1dp"
                                android:id="@+id/phoneNumberTenant"
                                android:layout_column="1"
                                android:gravity="center"
                                android:textStyle="bold"
                                />


                        </TableRow>
                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_margin="1dp"
                            android:layout_weight="1"
                            >

                            <ImageView
                                android:src="@drawable/ic_mail01"
                                android:layout_width="50dp"
                                android:layout_margin="5dp"
                                android:layout_height="50dp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text=""
                                android:layout_margin="1dp"
                                android:id="@+id/emailTenantD"
                                android:layout_column="1"
                                android:gravity="center"
                                android:textStyle="bold"
                                />


                        </TableRow>


                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_margin="1dp"
                            android:layout_weight="1"
                            >

                            <ImageView
                                android:src="@drawable/ic_gender"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text=""
                                android:layout_margin="1dp"
                                android:id="@+id/genderTenant"
                                android:layout_column="1"
                                android:gravity="center"
                                android:textStyle="bold"
                                />


                        </TableRow>

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_margin="1dp"
                            android:layout_weight="1"
                            >

                            <ImageView
                                android:src="@drawable/ic_store"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text=" "
                                android:layout_margin="1dp"
                                android:id="@+id/storenameTenant"
                                android:layout_column="1"
                                android:gravity="center"
                                android:textStyle="bold"
                                />

                        </TableRow>


                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_margin="1dp"
                            android:layout_weight="1"
                            >

                            <ImageView
                                android:src="@drawable/ic_shopping_store"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="150dp"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text=" "
                                android:layout_margin="1dp"
                                android:id="@+id/storeTypeTenant"
                                android:layout_column="1"
                                android:gravity="center"
                                android:textStyle="bold"
                                />

                        </TableRow>

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_margin="1dp"
                            android:layout_weight="1"
                            >

                            <ImageView
                                android:src="@drawable/ic_house"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                />

                            <TextView
                                android:layout_width="300dp"
                                android:layout_height="150dp"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text=""
                                android:layout_margin="1dp"
                                android:id="@+id/addressTenant"
                                android:layout_column="0"
                                android:gravity="center"
                                android:textStyle="bold"
                                />

                        </TableRow>




                    </TableLayout>


                </LinearLayout>



                <Button
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/buttonstyle"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ลบข้อมูล"
                    android:id="@+id/deleteUserBtn"
                    />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>