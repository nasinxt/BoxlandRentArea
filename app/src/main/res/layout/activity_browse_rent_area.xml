<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundcolor"
    android:orientation="vertical"
    tools:context=".ActivityClass.BrowseRentArea.BrowseRentArea">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/areaResultLinear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ค้นหาพื้นที่จำหน่ายสินค้า"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                />

            <ImageView
                android:id="@+id/mapImg"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:src="@drawable/boxlandmap"
                />

            <Spinner
                android:id="@+id/typeSinner"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                />

            <EditText
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:hint="ค้นหาพื้นที่"
                android:textColor="@color/white"
                android:layout_margin="5dp"

                />

            <Button
                android:id="@+id/searchBtn"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/buttonstyle"
                android:text="ค้นหา"
                android:textColor="@color/white"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="ผลการค้นหา"
                android:textSize="20dp"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TableLayout
                    android:id="@+id/SearchResult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp">


                </TableLayout>


            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>